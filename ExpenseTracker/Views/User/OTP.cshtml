
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container" style="margin-top:150px">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow rounded-4">
                    <div class="card-body text-center">
                        <h2 class="fw-bold mb-2">Expense Tracker</h2>
                        <h4 class="mb-4">Enter OTP</h4>

                        <form method="post">
                            <div class="mb-3 text-start">
                                <input type="text" name="OTP" id="OTP" class="form-control" placeholder="Enter OTP" required />
                                <p id="potp" style="color:red;display:none">Please Enter OTP</p>
                            </div>
                            <button type="button" id="btnOTP" class="btn btn-primary w-100">Submit</button>
                            <div class="mt-3">
                                <a style="cursor:pointer;" class="text-decoration-none">Resend OTP</a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>

    <script>
        $(document).ready(function(){
            $("#btnOTP").click(function(){
                var otp = $("#OTP").val();

                if(otp == ""){
                    $("#potp").show();
                }
                else{
                    $.ajax({
                        url:"UserController/Register",
                        type:"POST",
                        
                    })
                }
            })
        })
    </script>

</body>
</html>
